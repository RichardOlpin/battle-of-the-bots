{
    "manifest_version": 3,
    "name": "AuraFlow Calendar",
    "version": "1.0.0",
    "description": "Quick access to today's Google Calendar events",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "identity",
        "storage"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "AuraFlow Calendar",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "oauth2": {
        "client_id": "369028620284-5ln73vr959uiiuccov304bpcfmnn8dsn.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/calendar.readonly"
        ]
    }
}